<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_MA_RecuperarPass">
    <TextView
        android:id="@+id/txtTitulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#6A5ACD"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Recuperar contraseña"
        android:textAlignment="center"
        android:textSize="50dp" />


    <EditText
        android:id="@+id/etmensaje2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="60dp"
        android:inputType="text"
        android:maxLength="5" />

    <Button
        android:id="@+id/btnenviar2"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:onClick="ocEnviar"
        android:text="OKEY" />

    <TextView
        android:id="@+id/txtenviadocorreo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se ha enviado un código a su correo electrónico"
        android:visibility="gone" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="139dp">


            <EditText
                android:id="@+id/etn1m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etn2m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etn3m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etn4m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etn5m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1"
                android:visibility="gone" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btncodigom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:textSize="20dp"
                android:text="Confirmar código"
                android:visibility="gone" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtcontranuevam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingrese su nuevo pin (min. 4-max. 8)"

                android:visibility="gone" />

            <EditText
                android:id="@+id/etnuevacontram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="8"
                android:visibility="gone" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btncambiarpassm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:textSize="15dp"
                android:text="CAMBIAR CONTRASEÑA"
                android:visibility="gone" />
        </TableRow>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="346dp"
            android:layout_height="364dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/captura_de_pantalla_2025_05_28_221107" />
    </TableLayout>
</LinearLayout>