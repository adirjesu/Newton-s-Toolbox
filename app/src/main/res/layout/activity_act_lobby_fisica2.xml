<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_LobbyFisica2">

    <TextView
        android:id="@+id/TituloFisicaII"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="FÍSICA II"
        android:textColor="#6A5ACD"
        android:textSize="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:textSize="20dp"
        android:onClick="ocMagnetismo"
        android:text="Magnetismo"
        tools:ignore="TextSizeCheck"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:onClick="ocElectricidad"
        android:text="Electricidad"
        tools:ignore="TextSizeCheck"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck"
        android:backgroundTint="@color/black"
        android:onClick="ocCorriente"
        android:text="Corriente y circuitos" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="505dp"
        android:layout_height="450dp"
        android:layout_marginLeft="-79dp"
        app:srcCompat="@drawable/captura_de_pantalla_2025_05_28_221107" />


</LinearLayout>