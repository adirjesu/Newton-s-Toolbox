<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_LogginAdmin">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="207dp"
      android:layout_height="267dp"
      android:layout_marginLeft="110dp"
      app:srcCompat="@drawable/profesor" />

  <TextView
      android:id="@+id/txtTitulo3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#6A5ACD"
      android:fontFamily="@font/audiowide"
      android:gravity="center"
      android:text="Inicie sesión"
      android:textAlignment="center"
      android:textSize="50dp" />

  <EditText
      android:id="@+id/etusuario"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Ingresa tu usuario"
      android:inputType="text" />
  <EditText
      android:id="@+id/etpass"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Ingresa tu contraseña"
      android:inputType="text" />

  <Button
      android:id="@+id/btnlogin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginLeft="150dp"
      android:textSize="15dp"
      android:backgroundTint="@color/black"
      android:text="Ingresar" />



  <Button
      android:id="@+id/btntonto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:backgroundTint="@color/black"
      android:textSize="15dp"
      android:layout_marginLeft="110dp"
      android:onClick="ocLaperdi"
      android:text="Olvidé la contraseña" />

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="479dp"
      android:layout_height="200dp"
      android:scaleType="fitCenter"
      app:srcCompat="@drawable/captura_de_pantalla_2025_05_28_221107" />
</LinearLayout>