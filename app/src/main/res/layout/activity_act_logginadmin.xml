<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_LogginAdmin">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="207dp"
      android:layout_height="267dp"
      app:srcCompat="@drawable/profesor" />

  <TextView
      android:id="@+id/txtTitulo3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/audiowide"
      android:gravity="center"
      android:text="Inicie sesión"
      android:textAlignment="center"
      android:textSize="50dp" />

  <EditText
      android:id="@+id/etusuario"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Ingresa tu usuario"
      android:inputType="text" />
  <EditText
      android:id="@+id/etpass"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Ingresa tu contraseña"
      android:inputType="text" />

  <Button
      android:id="@+id/botonEnviar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:onClick="ocEnviar"
      android:text="Enviar correo" />

  <Button
      android:id="@+id/btntonto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:onClick="ocLaperdi"
      android:text="Olvidé la contraseña" />
</LinearLayout>