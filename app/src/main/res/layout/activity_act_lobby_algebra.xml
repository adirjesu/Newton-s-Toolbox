<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_LobbyAlgebra">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="ÁLGEBRA"
        android:textColor="#6A5ACD"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnPolinomios"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/black"
        android:onClick="ocPolinomios"
        android:text="Operaciones con polinomios"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btnEcuaciones"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/black"
        android:onClick="ocEcuaciones"
        android:text="Resolucion de ecuaciones"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btnFactorizacion"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="89dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/black"
        android:onClick="ocFactorizacion"
        android:text="Factorizacion"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="505dp"
        android:layout_height="309dp"
        android:layout_marginLeft="-79dp"
        app:srcCompat="@drawable/captura_de_pantalla_2025_05_28_221107" />

</LinearLayout>

