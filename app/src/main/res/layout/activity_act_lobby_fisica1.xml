<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_LobbyFisica1">

    <TextView
        android:id="@+id/txtTitulo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingBottom="15dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="FÍSICA I"
        android:textAlignment="center"
        android:textColor="#6A5ACD"
        android:textSize="50dp" />


    <Button
        android:id="@+id/btnpascal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/black"
        android:onClick="ocPascal"
        android:text="Principio de Pascal"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btnhooke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/black"
        android:onClick="ocHooke"
        android:text="Ley de Hooke"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btnyoung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="@color/black"
        android:onClick="ocYoung"
        android:text="Módulo de Young"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="497dp"
        android:layout_height="505dp"
        android:layout_marginLeft="-79dp"
        app:srcCompat="@drawable/captura_de_pantalla_2025_05_28_221107" />

</LinearLayout>