<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_LobbyAdmin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="207dp"
        android:layout_height="267dp"
        android:layout_marginLeft="110dp"
        app:srcCompat="@drawable/profesor" />

    <TextView
        android:id="@+id/txtTitulo3"
        android:textColor="#6A5ACD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Bienvenido Admin"
        android:textAlignment="center"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btncrudmaestros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="modificar Maestros"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/captura_de_pantalla_2025_05_28_221107" />

</LinearLayout>