<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACT_MA_C_agregar">

    <TextView
        android:id="@+id/txtTituloreac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="INGRESE LOS DATOS"
        android:textAlignment="center"
        android:textColor="#6A5ACD"
        android:textSize="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/txtmateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Tema: "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/rgTema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="ocTemareac"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rbt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ocTemareac"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rbt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ocTemareac"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </RadioGroup>

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txtusuariomaestro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Pregunta:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etpreguntar"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Â¿?"
        android:inputType="text"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtcontra"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Respuesta: "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etrespuestar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="="
        android:inputType="number"
        android:maxLength="12"
        android:textSize="18dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btns1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ocsimf1"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/black"
                android:text="" />

            <Button
                android:id="@+id/btns2a"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:onClick="ocsimf2"
                android:text="" />

            <Button
                android:id="@+id/btns3a"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ocsimf3"
                android:backgroundTint="@color/black"
                android:text="" />

            <Button
                android:id="@+id/btns4a"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ocsimf4"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btns5a"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/black"
                android:onClick="ocsimf5"
                android:text="" />

            <Button
                android:id="@+id/btns6a"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:onClick="ocsimf6"
                android:text="" />

            <Button
                android:id="@+id/btns7a"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:onClick="ocsimf7"
                android:text="" />

            <Button
                android:id="@+id/btns8a"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:onClick="ocsimf8"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Button
                android:id="@+id/btnagregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:enabled="false"
                android:text="Agregar"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnactualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:enabled="false"
                android:text="Aactualizar"
                android:visibility="gone" />

            <Button
                android:id="@+id/btneliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:enabled="false"
                android:text="Eliminar"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnlipiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:text="Limpiar"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnagregarreac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/black"
                android:text="Agregar" />


        </TableRow>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_marginTop="-80dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/captura_de_pantalla_2025_05_28_221107" />
    </TableLayout>
</LinearLayout>